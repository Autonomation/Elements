{
    "$id": "https://hypar.io/schemas/elements/Properties/NumericProperty.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NumericProperty",
    "type": "object",
    "description": "A property with a numeric value.",
    "required": ["Value", "ValueType"],
    "allOf": [{"$ref": "Property.json"}],
    "properties": {
        "Value": {
            "type": "number",
            "description": "The property's value"
        },
        "ValueType": {
            "type": "string",
            "description": "The value type.",
            "enum": ["Length","Mass","Force","Area","Pressure","Currency","Time","Number"]
        }
    },
    "additionalProperties": false
}