{
    "$id": "https://hypar.io/schemas/elements/Element.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "The base type for all elements.",
    "title": "Element",
    "type": "object",
    "required": ["Id","Components"],
    "properties": {
        "Id": {
            "type": "string",
            "format": "guid",
            "description": "An identifier for the element which must be unique within the system."
        },
        "Components": {
            "type": "array",
            "items": {"$ref": "Component.json"},
            "description": "A collection of components."
        }
    },
    "additionalProperties": false
}