{
    "$id": "https://hypar.io/schemas/elements/Element.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "The base type for all elements.",
    "title": "Element",
    "type": "object",
    "required": ["Id","Name","Transform","discriminator"],
    "discriminator": "discriminator",
    "properties": {
        "Id": {
            "type": "string",
            "format": "guid",
            "description": "An identifier for the element which must be unique within the system."
        },
        "Name": {
            "type": "string",
            "description": "The element's name."
        },
        "Transform": {
            "description": "The element's transform.",
            "$ref": "Geometry/Transform.json"
        },
        "discriminator": {
            "type": "string"
        }
    },
    "additionalProperties": true
}