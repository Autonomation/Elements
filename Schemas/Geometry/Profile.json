{
    "$id": "https://hypar.io/schemas/elements/Geometry/Profile.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Profile",
    "type": "object",
    "description": "A profile comprised of an external boundary and one or several holes.",
    "required": ["Perimeter", "Holes"],
    "properties": {
        "Name": {
            "description": "The name of the profile.",
            "type": "string"
        },
        "Perimeter":{
            "description": "The perimeter of the profile.",
            "$ref": "Polygon.json"
        },
        "Voids": {
            "type": ["null","array"],
            "description": "A collection of Polygons representing voids in the profile.",
            "items": {
                "$ref": "Polygon.json"
            }
        }
    },
    "additionalProperties": false
}