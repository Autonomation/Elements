{
    "$id": "https://hypar.io/schemas/elements/Geometry/Profile.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Profile",
    "type": ["object","null"],
    "description": "A profile comprised of an external boundary and one or several holes.",
    "required": ["Name","Id","Perimeter","Voids"],
    "properties": {
        "Id": {
            "type": "string",
            "format": "guid",
            "description": "An identifier for the entity which must be unique within the system."
        },
        "Name": {
            "type": ["string","null"],
            "description": "The entity's name."
        },
        "Perimeter":{
            "description": "The perimeter of the profile.",
            "$ref": "Polygon.json"
        },
        "Voids": {
            "type": ["null","array"],
            "description": "A collection of Polygons representing voids in the profile.",
            "items": {
                "$ref": "Polygon.json"
            }
        }
    },
    "additionalProperties": false
}