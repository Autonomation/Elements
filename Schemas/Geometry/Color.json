            "minimum": 0.0,
            "maximum": 1.0
        },
        "Green": {
            "description": "The green component of the color.",
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
        },
        "Blue": {
            "description": "The blue component of the color.",
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
        },
        "Alpha": {
            "description": "The alpha component of the color.",
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
        }
    },
