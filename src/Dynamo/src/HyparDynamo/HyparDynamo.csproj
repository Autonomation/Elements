<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net47</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DynamoVisualProgramming.Core" Version="2.5.0.7432">
      <Private>False</Private>
    </PackageReference>
    <PackageReference Include="DynamoVisualProgramming.DynamoServices" Version="2.5.0.7432">
      <Private>False</Private>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="RevitAPI">
      <HintPath>C:\Program Files\Autodesk\Revit 2020\RevitAPI.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="RevitNodes">
      <HintPath>C:\Program Files\Autodesk\Revit 2020\AddIns\DynamoForRevit\Revit\RevitNodes.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="RevitServices">
      <HintPath>C:\Program Files\Autodesk\Revit 2020\AddIns\DynamoForRevit\Revit\RevitServices.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Revit\RevitHyparTools\HyparRevit.csproj" />
    <ProjectReference Include="..\..\..\Elements\Elements.csproj" />
  </ItemGroup>

  <ItemGroup>
    <NodeLibraries Include="$(TargetDir)*.*" />
  </ItemGroup>
  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <Target Name="CleanDeploy" BeforeTargets="BeforeBuild">
    <RemoveDir Directories="..\..\deploy\HyparDynamo\bin\" />
  </Target>

  <Target Name="BuildPackage" AfterTargets="AfterBuild">
    <!-- <Copy SourceFiles="@(NodeLibraries)" DestinationFolder="..\..\deploy\HyparDynamo\bin\" /> -->
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="..\..\deploy\HyparDynamo\bin\" />
    <Copy SourceFiles="$(TargetDir)$(TargetName).pdb" DestinationFolder="..\..\deploy\HyparDynamo\bin\" ContinueOnError="true" />
    <Copy SourceFiles="$(TargetDir)$(TargetName).xml" DestinationFolder="..\..\deploy\HyparDynamo\bin\" ContinueOnError="true" />
    <Copy SourceFiles="$(TargetDir)Hypar.Elements.dll" DestinationFolder="..\..\deploy\HyparDynamo\bin\" />
    <Copy SourceFiles="$(TargetDir)Hypar.IFC4.dll" DestinationFolder="..\..\deploy\HyparDynamo\bin\" />
    <Copy SourceFiles="$(TargetDir)HyparRevit.dll" DestinationFolder="..\..\deploy\HyparDynamo\bin\" />
    <Copy SourceFiles="$(TargetDir)NJsonSchema.dll" DestinationFolder="..\..\deploy\HyparDynamo\bin\" />
    <Copy SourceFiles="$(ProjectDir)HyparDynamo_DynamoCustomization.xml" DestinationFolder="..\..\deploy\HyparDynamo\bin\" ContinueOnError="true" />
  </Target>

  <ItemGroup>
    <DynamoPackage Include="$(ProjectDir)..\..\deploy\HyparDynamo\**\*.*" />
  </ItemGroup>
  <Target Name="Deploy" AfterTargets="BuildPackage" Condition=" '$(Configuration)' == 'Debug' ">
    <RemoveDir Directories="$(AppData)\Dynamo\Dynamo Revit\2.5\packages\Hypar Dynamo\" />
    <Copy SourceFiles="@(DynamoPackage)" DestinationFiles="@(DynamoPackage->'$(AppData)\Dynamo\Dynamo Revit\2.5\packages\Hypar Dynamo\%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>
</Project>
