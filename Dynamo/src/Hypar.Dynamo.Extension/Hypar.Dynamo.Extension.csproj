<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net47</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DynamoVisualProgramming.DynamoServices" Version="2.5.0.7432">
            <Private>False</Private>
        </PackageReference>
        <PackageReference Include="DynamoVisualProgramming.WpfUILibrary" Version="2.5.0.7432">
            <Private>False</Private>
        </PackageReference>
    </ItemGroup>

    <Target Name="CopyToPackage" AfterTargets="Build">
        <Copy SourceFiles="$(TargetDir)$(TargetName).dll" DestinationFolder="$(ProjectDir)../../deploy/Hypar.Dynamo/bin" ContinueOnError="true" />
        <Copy SourceFiles="Hypar.Dynamo.Extension_ExtensionDefinition.xml" DestinationFolder="$(ProjectDir)../../deploy/Hypar.Dynamo/extra" ContinueOnError="true" />
    </Target>

</Project>